{
  "manifest_version": 3,
  "name": "Word Definition Finder",
  "version": "1.0",
  "description": "Highlight any word on any website to get its definition.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Highlight to Define"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
