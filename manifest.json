{
  "manifest_version": 3,
  "name": "Highlight Word Definition",
  "version": "1.0",
  "description": "Highlight any word on a webpage to see its definition.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
